{
  "extends": "next/core-web-vitals",
  "rules": {
    "quotes": ["error", "single"],
    "no-unused-vars": "error",
    "no-console": "error",
    "prefer-const": "error",
    "prefer-destructuring": "error",
    "react-hooks/exhaustive-deps": [
      "warn",
      {
        "additionalHooks": "useDebouncedEffect"
      }
    ]
  },
  "ignorePatterns": [
    "node_modules/",
    "src/fonts",
    "src/images/*",
    "src/public/",
    "src/*.css"
  ]
}
